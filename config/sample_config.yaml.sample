# Configuration for LLM Sensor Knowledge Comparison Application

# OpenRouter API Key (Replace with your actual key)
# It's recommended to use environment variables for sensitive data like API keys
openrouter_api_key: "OPEN_ROUTER_KEY"

# Models to compare (Use model identifiers from OpenRouter)
models:
  - "qwen/qwen-2.5-vl-72b-instruct"
  - "meta-llama/llama-3.1-70b-instruct"
  - "mistralai/mistral-large-2411"
  - "anthropic/claude-3.5-sonnet"
  - "anthropic/claude-3-opus"
  - "google/gemini-flash-1.5-8b"

# Paths
data_path: "data/sensors.csv"
prompt_template_path: "prompts/base_prompt.txt"
results_base_path: "results"
metrics_log_path: "logs/metrics.csv"

# API Settings
api_base_url: "https://openrouter.ai/api/v1"
request_timeout: 120 # seconds